{
    "$schema": "http://json.schemastore.org/package",
    "name": "@kayahr/cdi",
    "version": "0.2.0",
    "type": "module",
    "description": "Simple generic dependency injection library",
    "keywords": [
        "cdi",
        "dependency-injection",
        "context",
        "dependency",
        "dependencies",
        "injection",
        "singleton"
    ],
    "license": "MIT",
    "author": "Klaus Reimer <k@ailis.de>",
    "repository": "github:kayahr/cdi",
    "homepage": "https://github.com/kayahr/cdi",
    "bugs": "https://github.com/kayahr/cdi/issues",
    "funding": "https://github.com/kayahr/cdi?sponsor=1",
    "publishConfig": {
        "access": "public"
    },
    "files": [
        "lib/main/",
        "src/main/"
    ],
    "exports": {
        ".": "./lib/main/index.js",
        "./legacy": "./lib/main/legacy-decorators.js"
    },
    "scripts": {
        "clean": "rimraf lib",
        "build": "run-s build:*",
        "build:compile": "tsc",
        "test": "run-s test:*",
        "test:unit": "vitest run",
        "test:lint": "eslint --max-warnings 0",
        "test:apidoc": "typedoc --emit none",
        "test:spell": "cspell --no-progress --no-summary",
        "apidoc": "typedoc",
        "install:browser": "playwright install chromium",
        "prepare": "run-s install:browser clean build"
    },
    "devDependencies": {
        "@kayahr/eslint-config": "3.5.0",
        "@kayahr/vitest-matchers": "1.2.0",
        "@types/node": "22.15.19",
        "@vitest/browser": "3.1.2",
        "@vitest/coverage-v8": "3.1.2",
        "cspell": "9.0.1",
        "npm-run-all": "4.1.5",
        "playwright": "1.52.0",
        "reflect-metadata": "0.2.2",
        "rimraf": "6.0.1",
        "source-map-support": "0.5.21",
        "typedoc": "0.28.4",
        "typescript": "5.8.3",
        "vitest": "3.1.2"
    }
}
